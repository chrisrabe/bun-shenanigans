{
  "compilerOptions": {
    "target": "ES2017",                          
    "module": "commonjs",                    
    "lib": ["es6"],                     
    "allowJs": true,
    "outDir": ".api",                          
    "rootDir": "src",
    "baseUrl": "src",
    "strict": true,         
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@/services/*": ["services/*"]
    }
  },
  "exclude": ["node_modules"]
}